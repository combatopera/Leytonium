#!/usr/bin/env python3

#HALP Commit with the given args as message.

from common import run, args, isgitpol, runlines, findproject
from pathlib import Path

formatstatuses = {'A ', 'M '}
ignorestatuses = {'D ', ' M', '??'}

def main():
    toformat = []
    projectdir = Path(findproject()).resolve()
    cwd = Path.cwd()
    for line in runlines(['git', 'status', '--porcelain']):
        status, text = line[:2], line[3:]
        if status in formatstatuses:
            if text.endswith('.py'): # Note text not one path in rename and copy cases.
                toformat.append((projectdir / text).relative_to(cwd))
        elif status not in ignorestatuses:
            raise Exception("Panic: %s" % line)
    if toformat:
        run(['black', '--line-length', '120'] + toformat) # TODO: This will be more useful at staging time.
        run(['git', 'add'] + toformat)
    message = ' '.join(args())
    if isgitpol():
        message = 'WIP ' + message[0].upper() + message[1:]
    run(['git', 'commit', '-m', message])

if '__main__' == __name__:
    main()
