#!/usr/bin/env python3

#HALP Pull master and releases with automatic stash and switch.

from common import nicely, githubuser, publicbranches, run

def main():
    prefix = "%s-" % githubuser()
    def pullthem():
        for b in publicbranches():
            if b.startswith(prefix):
                continue
            run(['git', 'checkout', b])
            run(['git', 'pull'])
    nicely(pullthem)

if '__main__' == __name__:
    main()
