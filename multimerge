#!/usr/bin/env python3

#HALP Merge master into all PRs and carrion.

from common import findproject, nicely, allbranches, ispublic, stderr, pb, run
import os

def mergethem():
    remaining = allbranches()
    branchtoparent = {b: pb(b) for b in remaining}
    allparents = set(branchtoparent.values())
    def update(b, p):
        run(['git', 'checkout', b])
        if b in allparents or b.startswith('controversial-') or ispublic():
            run(['git', 'merge', '--no-edit', p])
        else:
            run(['git', 'rebase', p])
    done = set()
    while remaining:
        stderr("Remaining: %s" % ' '.join(remaining))
        def g():
            for b in remaining:
                p = branchtoparent[b]
                if p.startswith('origin/') or p in done:
                    update(b, p)
                    done.add(b)
                else:
                    yield b
        remaining = list(g())

def main():
    os.chdir(findproject()) # XXX: Why?
    nicely(mergethem)

if '__main__' == __name__:
    main()
